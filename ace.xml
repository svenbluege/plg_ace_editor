<?xml version="1.0" encoding="utf-8"?>
<extension version="3.4" type="plugin" group="editors" method="upgrade">
  <name>PLG_EDITORS_ACE</name>
  <version>0.3</version>
  <creationDate>26.04.2015</creationDate>
  <author>Shangin Nikolai</author>
  <authorEmail>shanginn@gmail.com</authorEmail>
  <authorUrl>www.svenbluege.de</authorUrl>
  <copyright></copyright>
  <license>GNU General Public License version 2 or later</license>
  <description>PLG_ACE_XML_DESCRIPTION</description>
  <files>
    <filename plugin="ace">ace.php</filename>
    <filename>index.html</filename>
    <folder>assets</folder>
  </files>
  <languages folder="language">
    <language tag="en-GB">en-GB.plg_editors_ace.ini</language>
    <language tag="en-GB">en-GB.plg_editors_ace.sys.ini</language>
    <language tag="ru-RU">ru-RU.plg_editors_ace.ini</language>
    <language tag="ru-RU">ru-RU.plg_editors_ace.sys.ini</language>
  </languages>
    <config>
    <fields name="params">
      <fieldset name="basic">
        <field  name="theme"
          type="list"
          default="textmate"
          label="PLG_EDITOR_ACE_CONFIG_THEME_LABEL"
          >
          <option value="ambiance">Ambiance</option>
          <option value="chaos">Chaos</option>
          <option value="chrome">Chrome</option>
          <option value="clouds">Clouds</option>
          <option value="clouds_midnight">Clouds midnight</option>
          <option value="cobalt">Cobalt</option>
          <option value="crimson_editor">Crimson editor</option>
          <option value="dawn">Dawn</option>
          <option value="dreamweaver">Dreamweaver</option>
          <option value="eclipse">Eclipse</option>
          <option value="github">Github</option>
          <option value="idle_fingers">Idle fingers</option>
          <option value="katzenmilch">Katzenmilch</option>
          <option value="kr">Kr</option>
          <option value="kr_theme">Kr theme</option>
          <option value="kuroir">Kuroir</option>
          <option value="merbivore">Merbivore</option>
          <option value="merbivore_soft">Merbivore soft</option>
          <option value="mono_industrial">Mono industrial</option>
          <option value="monokai">Monokai</option>
          <option value="pastel_on_dark">Pastel on dark</option>
          <option value="solarized_dark">Solarized dark</option>
          <option value="solarized_light">Solarized light</option>
          <option value="terminal">Terminal</option>
          <option value="textmate">Textmate</option>
          <option value="tomorrow">Tomorrow</option>
          <option value="tomorrow_night_blue">Tomorrow night blue</option>
          <option value="tomorrow_night_bright">Tomorrow night bright</option>
          <option value="tomorrow_night_eighties">Tomorrow night eighties</option>
          <option value="tomorrow_night">Tomorrow night</option>
          <option value="twilight">Twilight</option>
          <option value="vibrant_ink">Vibrant ink</option>
          <option value="xcode">Xcode</option>
        </field>
        <field  name="syntax"
          type="list"
          default="html"
          label="PLG_EDITOR_ACE_CONFIG_SYNTAX_LABEL"
          description="PLG_EDITOR_ACE_CONFIG_SYNATX_DESC"
          >
          <option value="html">HTML</option>
          <option value="markdown">MarkDown</option>
        </field>
        <field  name="showPrintMargin"
          type="radio"
          class="btn-group btn-group-yesno"
          default="false"
          label="PLG_EDITOR_ACE_CONFIG_PRINTMARGIN_LABEL"
          description="PLG_EDITOR_ACE_CONFIG_PRINTMARGIN_DESC"
          >
          <option value="false">JOFF</option>
          <option value="true">JON</option>
        </field>
        <field  name="enable_emmet"
          type="radio"
          default="false"
          class="btn-group btn-group-yesno"
          label="PLG_EDITOR_ACE_CONFIG_EMMET_LABEL"
          description="PLG_EDITOR_ACE_CONFIG_EMMET_DESC"
          >
          <option value="false">JOFF</option>
          <option value="true">JON</option>
        </field>
      </fieldset>
    </fields>
  </config>
  
  <updateservers>
      <server type="extension" priority="1" name="Shance extensions updates from git">https://raw.githubusercontent.com/Shance/JUpdates/master/ace.xml</server>
  </updateservers>
</extension>
